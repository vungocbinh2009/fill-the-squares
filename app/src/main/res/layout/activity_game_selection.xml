<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameSelectionView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GameSelectionActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chooseYourGameTextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/classicGame6x6Button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gameSelectionColor1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@string/classicGame6x6Board"
                android:textSize="18sp" />

            <Button
                android:id="@+id/classicGame8x8Button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gameSelectionColor2"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@string/classicGame8x8Board"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>