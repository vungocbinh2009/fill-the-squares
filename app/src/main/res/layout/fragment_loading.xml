<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.LoadingFragment">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.binh.games.fillthesquares.customview.SquareTextView
                android:text="@string/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/loadingTextView" android:textSize="18sp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loadingProgressBar" android:layout_weight="1"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal" android:indeterminate="true"/>
    </TableRow>
</TableLayout>